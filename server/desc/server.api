syntax = "v1"

info(
	title: "burst server"
	desc: "burst server api"
	author: "fzdwx"
	email: "likelovec@gmail.com"
	version: "v1"
)

import "types.api"

// ============================= 用户 =============================
@server(
	group: user
)
service server {
	@doc "register a new client"
	@handler auth
	post /auth returns (RegisterResp)
}

// ============================= 代理 =============================

@server(
	group: proxy
)

service server {
	@doc "add proxy info"
	@handler addProxy
	post /add () returns ()
	
	@doc "remove proxy info"
	@handler removeProxy
	post /remove () returns ()
}

// ============================= 客户端连接 =============================
@server(
	group: client
)

service server {
	@doc "connect to server"
	@handler connectHandler
	get /connect (ClientConnectReq) returns (ClientConnectResp)
}